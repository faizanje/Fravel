<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
    </style>

    <style name="ToolbarTextAppearance">
        <item name="fontFamily">@font/nunito</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MyTabTextAppeareance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/nunito</item>
    </style>
    <style name="MyOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/main</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>


    <style name="MyButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/corner_radius</item>
    </style>
</resources>