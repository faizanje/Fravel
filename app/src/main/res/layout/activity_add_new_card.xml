<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewCard">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:layout_height="70dp"
            android:layout_marginLeft="@dimen/entry_fields_diff"
            android:layout_marginRight="@dimen/entry_fields_diff"
            android:hint="Name on Card"></EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="70dp"
            android:layout_marginLeft="@dimen/entry_fields_diff"
            android:layout_marginRight="@dimen/entry_fields_diff"
            android:hint="Card Number"></EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="70dp"
            android:layout_marginLeft="@dimen/entry_fields_diff"
            android:layout_marginRight="@dimen/entry_fields_diff"
            android:hint="Expire Date"></EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="70dp"
            android:layout_marginLeft="@dimen/entry_fields_diff"
            android:layout_marginRight="@dimen/entry_fields_diff"
            android:hint="CVV"></EditText>


        <Button
            android:id="@+id/btn_addcard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"
            android:background="@drawable/filled_btn_general"
            android:text="Add Card" />


    </LinearLayout>

</RelativeLayout>